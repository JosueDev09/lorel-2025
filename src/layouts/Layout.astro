---
import Menu from "../components/menu/menu"
import Footer from '../components/footer/footer.astro';
// import Footer from "../components/footer/footer.astro";
// import Analytics from '@vercel/analytics/astro'
import { ClientRouter } from "astro:transitions";
const { 
  title = "LOREL - Cintas y etiquetas LOREL, S.A. de C.V.",
  description = "Cintas y etiquetas LOREL, S.A. de C.V. - Innovación y calidad en cada producto.",
  showMenu = true
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/assets/imgConvertidas/LORELLOGO1.webp" />
		<link rel="icon" type="image/png" href="/assets/imgConvertidas/cruz-negativa.webp" />
		<link rel="apple-touch-icon" href="/assets/imgConvertidas/cruz-negativa.webp" />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="author" content="Josué Dev" />
		<meta name="keywords" content="etiquetas, cintas, impresión, LOREL, plotter" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<meta name="generator" content={Astro.generator} />
     
		<!-- Estilos globales -->
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>

	<body>
		<!-- Menú fijo - Solo se muestra si showMenu es true -->
		{showMenu && (
			<header class="menu-fijo">
				<Menu client:load />
			</header>
		)}

		<!-- Contenedor del contenido desplazable -->
		<div id="scroll-wrapper">
			<main>
			<slot />
			</main>
			
		</div>
		  <!-- <Analytics /> -->
	</body>
	<Footer />
</html>

<style is:global>
  /* Reset y estilos base */
 @import 'tailwindcss';  
 
	html{
		 margin: 0;
		padding: 0;
	}
      body {
        height: 100%;
        margin: 0;
        padding: 0;
         scroll-behavior: smooth;
         
      }
      section {
        display: flex;
        align-items: center;
        justify-content: center;
        scroll-snap-align: start;
        padding: 0.5rem 2rem; /* Padding mínimo */
      }      
   

/* Utilidades de espaciado */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Variables de color corporativas LOREL */
:root {
  --color-navy: #1F3C68;
  --color-wine: #9C2D32;
  --color-black: #231F20;
  --color-white: #ffffff;
  --color-light-gray: #f8f9fa;
}

/* Accesibilidad */
:focus-visible {
  outline: 2px solid var(--color-navy);
  outline-offset: 2px;
}

</style>






